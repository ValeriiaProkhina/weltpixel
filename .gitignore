### Magento 2 .gitignore ###

# Ignore the composer vendor directory
/vendor/

# Ignore the Magento generated directories
/generated/

# Ignore the var directories (various runtime files)
var/

# Ignore the pub/static directory (contains compiled assets)
pub/static/

# Ignore the pub/media directory (contains uploaded media files)
pub/media/

# Ignore log files
var/log/
*.log

# Ignore configuration files that contain sensitive information
.env
.env.*

# Ignore Magento's local development environment directory
/.idea/
/.vscode/

# Ignore PHPStorm specific files
.idea/*

# Ignore composer.lock if you're using it as a vendor management tool
composer.lock

# Ignore Composer's PHP and vendor cache
composer.phar

# Ignore Magento's setup files (the installer process creates these)
setup/

# Ignore files generated by the Magento CLI tool
bin/magento

# Ignore the .phpunit.result.cache file
.phpunit.result.cache

# Ignore the .history (editor history files)
.history/

# Ignore test coverage files
coverage/

# Ignore the generated code in dev mode
dev/

# Ignore all files in the .git directory
.git/

# Ignore PHPUnit related files
phpunit.xml
phpunit.xml.dist

# Ignore the IDE-specific files (Eclipse, NetBeans, etc.)
.project
.buildpath
.nb-configuration.xml

# Ignore OS-specific files (macOS, Windows, etc.)
.DS_Store
Thumbs.db

# Ignore Magento's database export file
*.sql

# Ignore backup files (usually created when upgrading or deploying Magento)
*.bak
*.swp
*.swo
/node_modules/
